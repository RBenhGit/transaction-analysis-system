{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Read(*)",
      "Glob(*)",
      "Grep(*)",
      "Bash(python *)",
      "Bash(pip *)",
      "Bash(pytest *)",
      "Bash(git *)",
      "Edit(*)",
      "Write(*)"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Write(.env)",
      "Read(*.key)"
    ]
  },
  "hooks": {
    "sessionStart": {
      "command": "echo '=== Transaction Analysis Project - Session Started ==='",
      "timeout": 5000
    }
  }
}
